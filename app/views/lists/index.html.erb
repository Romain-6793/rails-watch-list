<div>
    <div class="container">
        <h2>Your lists :</h2>
        <% if @lists.any? %>
            <% @lists.each do |list|  %>
                <h3><%= list.name %></h3>
                <%= link_to "See details", list_path(list), class:"btn btn-primary" %>
            <% end %>
        <% else %>
                <p>No lists yet.</p>
        <% end  %>
        <div>
            <%= link_to "New list", new_list_path, class:"btn btn-primary" %> 
        </div>
        <h2>Your movies :</h2>
        <div>
            <% @movies.each do |movie| %>
                <div class="flex">
                    <%= image_tag movie.poster_url, alt: "image du film", width: 100 %>
                    <h3><%= movie.title %></h3>
                    <p><%= movie.overview %></p>
                    <p><%= movie.rating %></p>
                    <p><%= link_to("Add a bookmark!", new_bookmark_path(movie_id: movie.id)) %></p>
                </div>
            <% end %>
        </div>
        <h2>Your bookmarks :</h2>
        <% if @bookmarks.any? %>
            <% @bookmarks.each do |bookmark|  %>
                <h3><%= bookmark.comment %></h3>
                <p><%= link_to "Destroy bookmark!", bookmark_path(bookmark),
                    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></p>
            <% end %>
        <% else %>
                <p>No bookmarks yet.</p>
        <% end  %>
    </div>
</div>